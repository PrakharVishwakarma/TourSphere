<% if (successMsg && successMsg.length) { %>
<div
  class="alert alert-success alert-dismissible fade show offset-4 col-4"
  role="alert"
  style="text-align: center"
>
  <%= successMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (errorMsg && errorMsg.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show offset-4 col-4"
  role="alert"
  style="text-align: center"
>
  <%= errorMsg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
